<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.siswa.TypesActivity">

    <Button
        android:id="@+id/btn_carakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:text="Aksara Carakan" />

    <Button
        android:id="@+id/btn_pasangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:text="Aksara Pasangan"/>

    <Button
        android:id="@+id/btn_swara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:text="Aksara Swara"/>

    <Button
        android:id="@+id/btn_angka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:text="Aksara Angka"/>

</LinearLayout>